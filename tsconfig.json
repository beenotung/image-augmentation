{
   "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./lib",
      "strict": true,
      "strictNullChecks": true, 
      "strictFunctionTypes": true, 
      "strictPropertyInitialization": true, 
      "esModuleInterop": true,
      "noImplicitThis": true, 
      "noUnusedLocals": true,
   },
   "include": [
      "src"
   ],
   "exclude": [
      "node_modules",
      "**/__tests__/*"
   ]
}